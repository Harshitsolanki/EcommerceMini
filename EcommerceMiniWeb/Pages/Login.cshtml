@page
@model EcommerceMiniWeb.Pages.LoginModel
@{
    ViewData["Title"] = "User Login";
}
<h1>@ViewData["Title"]</h1>

<p>@TempData["Message"]</p>

<div >
<form method="post">

    <div>
        <label asp-for="LoginDto.Email"></label>
        <input asp-for="LoginDto.Email" class="form-control" required />
        <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="LoginDto.Password"></label>
        <input asp-for="LoginDto.Password" class="form-control" type="password" required  />
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>
    <div>
        <br />
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>
</div>